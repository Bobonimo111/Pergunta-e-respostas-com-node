<%- include ('./partials/header.ejs') %>

    <body>
        <%- include('./partials/navbar.ejs') %>
            <div class="container">
                <hr>
                <h1>
                    <%= pergunta.titulo %>
                </h1>
                <p>
                    <%= pergunta.descricao %>
                </p>
                <hr>
                <h3>Responda</h3>
                <form action="/responder" method="post">
                    <label for="">Resposta:</label>
                    <textarea name="corpo" class="form-control" placeholder="Digite sua resposta"></textarea>
                    <br>
                    <input name="pergunta" type="hidden" value="<%= pergunta.id %>" />
                    <button class="btn btn-primary">Responder</button>

                </form>

                <% respostas.forEach(resposta=> { %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <%= resposta.corpo %>
                        </div>

                    </div>

                    <% }) %>
            </div>
    </body>

    <%- include ('./partials/footer.ejs') %>